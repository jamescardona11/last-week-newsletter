---
interface Props {
  date: Date
}

const { date } = Astro.props
---

<span class='min-w-[120px] text-zinc-400 dark:text-zinc-400'>
  <time datetime={date.toISOString()}>
    {
      date.toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
      })
    }
  </time>
</span>
