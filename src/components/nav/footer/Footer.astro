---
import { siteMetadata } from '@/site-metadata'
import { navItemsList } from '../nav-items'
---

<footer
  class='container mx-auto max-w-[62rem] flex flex-col items-center justify-center gap-y-2 pb-4 pt-20 text-center align-top font-semibold text-gray-600 dark:text-gray-400 sm:flex-row sm:justify-between sm:text-xs'
>
  <div class='flex me-0 sm:me-4'>
    &copy; {siteMetadata.name}
    {'  '}
    <span class='inline-block'>&nbsp;ðŸš€&nbsp;</span>
    <div class='ml-4'>Subscribe on Linkedin</div>
  </div>

  <nav
    aria-label='More on this site'
    class='flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500'
  >
    {
      navItemsList
        .filter(e => e.hideNavigation == null || !e.hideNavigation)
        .map(navItem => {
          return (
            <a
              class='px-4 py-2 sm:py-0 sm:hover:text-textColor sm:hover:underline'
              href={navItem.href}
            >
              {navItem.title}
            </a>
          )
        })
    }
  </nav>
</footer>
