<button
  id='switch-theme'
  toggle-button
  class='w-8 h-8 -mr-2 flex items-center justify-center'
  aria-label='Toggle Dark Mode'
>
  <svg
    class='w-4 h-4 fill-current'
    viewBox='0 0 16 16'
    xmlns='http://www.w3.org/2000/svg'
  >
    <circle cx='8' cy='8' r='8'></circle>
  </svg>
</button>

<script>
  // Detect system preference change
  const panelElements = window
    .matchMedia('(prefers-color-scheme: dark)')
    .addEventListener('change', event => {
      setTheme(event.matches ? 'dark' : 'light')
    })

  // Set theme
  function setTheme(newTheme: any) {
    localStorage.setItem('theme', newTheme)
    document.documentElement.classList.remove('dark', 'light')
    document.documentElement.classList.add(newTheme)
  }

  // Toggle theme
  function toggleTheme() {
    const currentTheme = localStorage.getItem('theme')
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark'
    setTheme(newTheme)
  }

  // Detect system preference
  if (!localStorage.getItem('theme')) {
    let isDark = window.matchMedia('(prefers-color-scheme: dark)').matches
    // if (SITE_METADATA.theme !== 'system') {
    //     isDark = SITE_METADATA.theme === 'dark'
    // }
    setTheme(isDark ? 'dark' : 'light')
  }

  // Set initial theme
  setTheme(localStorage.getItem('theme'))

  // Add event listener
  document
    .querySelector('button[id="switch-theme"]')
    ?.addEventListener('click', toggleTheme)
  document.addEventListener('astro:after-swap', () =>
    setTheme(localStorage.getItem('theme'))
  )
</script>
