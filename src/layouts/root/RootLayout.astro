---
import Header from '@/components/nav/header/Header.astro'
import BaseHead from './BaseHead.astro'
import Footer from '@/components/nav/footer/Footer.astro'
import Subscribe from '@/components/Subscribe.astro'

interface Props {
  metaTitle?: string
  metaDescription?: string
  maxWidth?: boolean
  showSubscribe?: boolean
}

const {
  metaTitle: title,
  metaDescription: description,
  maxWidth,
  showSubscribe = true
} = Astro.props
---

<html lang='en' class='scroll-smooth'>
  <BaseHead metaTitle={title} metaDescription={description} />
  <body
    class='flex flex-col justify-between min-h-screen font-sans antialiased bg-background text-foreground'
  >
    <Header />
    <main
      class:list={[
        'container flex flex-col py-16 mx-auto mb-auto md:py-10',
        {
          'max-w-[62rem]': maxWidth
        }
      ]}
    >
      <slot />
    </main>
    <div
      class='max-w-[62rem] container flex flex-col py-16 mx-auto mb-auto md:py-10'
    >
      {showSubscribe && <Subscribe class='mt-16 sm:mt-24' />}
    </div>
    <Footer />
  </body>
</html>
