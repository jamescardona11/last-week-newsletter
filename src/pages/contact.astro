---
import PageLayout from '@/layouts/PageLayout.astro'

import Link from '@/components/Link.astro'
import { socialNetwork } from '@/lib/social-network-links'
---

<PageLayout metaTitle='Contact Page'>
  <section class='space-y-6'>
    <div class='flex flex-col gap-4'>
      <h1 class='text-3xl font-heading'>Get in touch</h1>
      <div
        class='max-w-[42rem] leading-normal text-muted-foreground sm:text-lg sm:leading-8'
      >
        <p class='text-lg mt-2 text-muted-foreground'>
          Thank you for reaching out!
        </p>

        <div class='text-lg mt-2 text-muted-foreground'>
          Whether you have a question, a suggestion, or just want to share your
          thoughts, I'm all ears. Via
          <Link
            href={socialNetwork.linkedin.link}
            class='text-main text-muted-foreground underline'
          >
            LinkedIn
          </Link>
          . I'll do my best to respond as soon as possible;
        </div>
      </div>
    </div>
  </section>
  <!-- <Subscribe class='mt-16 sm:mt-24' /> -->
</PageLayout>
